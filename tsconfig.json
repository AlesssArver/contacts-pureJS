{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "rootDirs": ["src"],
    "outDir": "build",
    "baseUrl": "src",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "paths": {
    "src/*": ["src/*"],
    "styles/*": ["src/assets/styles*"],
    "components/*": ["src/components/*"],
    "pages/*": ["src/pages/*"],
    "store/*": ["src/store/*"],
    "helpers/*": ["src/helpers/*"],
    "utils/*": ["src/utils/*"],
    "api/*": ["src/api/*"]
  }
}
